<h1>Edit your vehicle</h1>
<h2> <%= @vehicle.brand %> <%= @vehicle.model %> <%= @vehicle.year %></h2>
<% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<ul>
    <form action="/vehicles/<%= @vehicle.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch"/>
    <li>
        <label for="brand">Brand: </label><br>
        <input type="text" id="brand" name="brand" value="<%= @vehicle.brand %>"><br>
    </li>
    <li>
        <label for="model">Model: </label><br>
         <input type="text" name="model" id="model" value="<%= @vehicle.model %>"><br>
    </li>
    <li>
        <label for="year">Year: </label><br>
        <input type="integer" id="year" name="year" value="<%= @vehicle.year %>"><br>
    </li>
    <li>
        <label for="style">Style: </label><br>
        <input type="text" id="style" name="style" value="<%= @vehicle.style %>"><br>
    </li>
    <li>
        <label for="color">Color: </label><br>
        <input type="text" id="color" name="color" pattern='[A-Za-z\\s]*'/ value="<%= @vehicle.color %>"><br>
    </li>
    <li>
        <label for="price">Price: </label><br>
        <input type="number" id="price" name="price" min="0" step="0.01" value="<%= @vehicle.price %>"><br>
    </li>
    <li>
        <label for="vin_number">VIN #: </label><br>
        <input type="text" id="vin_number" name="vin_number" minlength="17" maxlength="17" value="<%= @vehicle.vin_number %>"><br>
    </li>
</ul>

  <input type="submit" value="Save">
   <br>
   <br>
</form>




